{
  "env": {
    "es2021": false,
    "node": true
  },
  "extends": "xo",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "no-undef": "off",
    "no-multi-assign": "off",
    "no-warning-comments": "off",
    "no-negated-condition": "off",
    "no-bitwise": "off",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "ImportDeclaration": "off",
        "SwitchCase": 1
      }
    ],
    "new-cap": [
      "error",
      {
        "capIsNew": false
      }
    ],
    "camelcase": [
      "error",
      {
        "ignoreImports": true,
        "properties": "never"
      }
    ],
    "capitalized-comments": "off",
    "no-unused-expressions": "off",
    "logical-assignment-operators": [
      "error",
      "never"
    ],
    "max-params": [
      "error",
      6
    ]
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "**/*es6-promise.js"
  ]
}